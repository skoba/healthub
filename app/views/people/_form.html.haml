= form_for @person do|f|
  -if @person.errors.any?
    #error_explanation
      %h2= #{pluralize(@person.errors.count, "error)} prohibited this person from beiing saved:"
      %ul
        - @person.errors.full_messages.each do |msg|
          %li = msg
  .field
    = f.label :family_name
    = f.text_field :family_name
  .field
    = f.label :given_name
    = f.text_field :given_name
  .actions
    = f.submit 'Save'
